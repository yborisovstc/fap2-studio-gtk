<?xml version="1.0" ?>

<!-- Unit test for ceation of system. System includes connpoint with roles specified.
     So System supports different "type" of relations (roled relations)
     This test is just for conn points connection
     -->


<!DOCTYPE node SYSTEM "/usr/share/grayb/conf/objspec.dtd"> 

<node id="test" parent="Syst">

    <node id="Logspec" parent="Elem"> <node id="Creation" parent="Elem"/> </node>

    <!-- Module containing components of system layer -->
    <node id="sysmod" parent="file:/usr/share/grayb/modules/syst.xml#SysComps" />

    <node id="Syst1" parent="Syst">
	<node id="Logspec" parent="Elem">
	    <node id="Creation" parent="Elem">
	    </node>
	</node>
	<node id="cp" parent="../SysComps:sysmod/ConnPointBase:ConnPoint"> 
	    <cont node="Prop:Provided" val="Role1"/> <cont node="Prop:Required" val="Role2"/>
	</node>
	<node id="ep" parent="../SysComps:sysmod/Vert:Extender"> 
	    <cont node="ConnPoint:Int/Prop:Provided" val="Role4"/> <cont node="ConnPoint:Int/Prop:Required" val="Role3"/>
	</node>
    </node>

    <node id="Syst2" parent="Syst">
	<node id="Logspec" parent="Elem">
	    <node id="Creation" parent="Elem">
	    </node>
	</node>
	<node id="cp" parent="../SysComps:sysmod/ConnPointBase:ConnPoint"> 
	    <cont node="Prop:Provided" val="Role2"/> <cont node="Prop:Required" val="Role1"/>
	</node>
    </node>


    <node id="cp1" parent="SysComps:sysmod/ConnPointBase:ConnPoint"> 
	<cont node="Prop:Provided" val="Role1"/> <cont node="Prop:Required" val="Role2"/></node>
    <node id="cp2" parent="SysComps:sysmod/ConnPointBase:ConnPoint"> 
	<cont node="Prop:Provided" val="Role2"/> <cont node="Prop:Required" val="Role1"/></node>
    <node id="cp3" parent="SysComps:sysmod/ConnPointBase:ConnPoint"> 
	<cont node="Prop:Provided" val="Role4"/> <cont node="Prop:Required" val="Role3"/></node>

    <node parent="Edge"> <cont node="Prop:P1" val="ConnPoint:cp1"/> <cont node="Prop:P2" val="ConnPoint:cp2"/> </node>

    <node parent="Edge"> <cont node="P1" val="Syst1/cp"/> <cont node="P2" val="Syst2/cp"/> </node>

    <node parent="Edge"> <cont node="Prop:P1" val="Syst:Syst1/ConnPoint:cp"/> <cont node="Prop:P2" val="ConnPoint:cp2"/> </node>
    <node parent="Edge"> <cont node="Prop:P1" val="Syst:Syst1/Extender:ep"/> <cont node="Prop:P2" val="ConnPoint:cp3"/> </node>
    <!--
    -->

</node>

